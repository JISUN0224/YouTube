{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 300
    }
  },
  "env": {
    "AZURE_SPEECH_KEY": "@azure_speech_key",
    "AZURE_SPEECH_REGION": "@azure_speech_region"
  },
  "redirects": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
